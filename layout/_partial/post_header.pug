.post-title
  .background
    img(src=theme.post_background)
  h1.title #{page.title}
  ul.meta
    li
      i.icon.icon-author
      | #{config.author}
    li
      i.icon.icon-clock
      | #{parseInt(page.content ? page.content.length/900 : 0)} Minutes
    li
      i.icon.icon-category
      | !{list_categories(page.categories)}